@page
@model Comics.Pages.EditComicsModel
@{
    int[] grades = new int[3] { 4, 5, 6 };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 20px;
        }

        form {
            max-width: 500px;
            margin: auto;
        }

        label {
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <h1>User</h1>
        <form method="post">
            <div class="form-group">
                <label for="Name">Имя пользователя</label>
                <input asp-for="comics.Name" type="text" class="form-control" id="Name" name="Name">
                <span asp-validation-for="comics.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">E-mail</label>
                <input asp-for="comics.Email" type="text" class="form-control" id="Email" name="Email">
                <span asp-validation-for="comics.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="LastName">LastName</label>
                <input asp-for="comics.LastName" type="text" class="form-control" id="LastName" name="LastName">
                <span asp-validation-for="comics.LastName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>

        <div>
            <canvas id="myChart"></canvas>
        </div>

        <script>
            const ctx = document.getElementById('myChart');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Удивительный человек-паук', 'Россомаха', 'Халк'],
                    datasets: [{
                        label: '# of Votes',
                        data: [4, 2, 5],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        </script>

    </div>
</body>
</html>
